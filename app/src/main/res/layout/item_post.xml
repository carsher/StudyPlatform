<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_below="@+id/tv_title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_postName"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周小明"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_postTime"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-10-01 21:21"
            android:textSize="12sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_content_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_clickLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_loves_off"
            android:text="1"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_critic"
            android:layout_marginRight="10dp"/>
        <!--<TextView-->
            <!--android:id="@id/tv_critic"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:drawableLeft="@drawable/ic_chat24dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="1"/>-->
    </RelativeLayout>
</LinearLayout>