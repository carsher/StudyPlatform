<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.learning.video.view.SectionFragment">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="#61B8FF"
        android:fitsSystemWindows="false"
        android:clipToPadding="true"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:text="记录"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="2dp"
        android:background="#fff"></View>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_atteend_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天上课" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_classtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_atteend_class"
            android:text="0分钟"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:visibility="gone"
            android:textColor="#000"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_classtime"
            android:layout_toEndOf="@+id/tv_atteend_class"
            android:text="赶紧上课吧！" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"></View>
<ListView
    android:background="#F5F5F5"
    android:id="@+id/lv_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ListView>
</LinearLayout>
