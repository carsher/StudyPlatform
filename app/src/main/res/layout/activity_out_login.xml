<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#60BBFF"
        android:fitsSystemWindows="false"
        android:clipToPadding="true"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_back1"
            android:src="@drawable/ic_returns"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:text="设置"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtl_outlogin"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:background="#fff"
        android:layout_height="45dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_headers"
            android:src="@drawable/ic_outlogin"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_headers"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:text="退出登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/rightallow"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </RelativeLayout>

</LinearLayout>
