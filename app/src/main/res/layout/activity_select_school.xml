<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:background="#000"
        android:layout_width="25dp"
        android:layout_height="3dp" />

    <TextView
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000"
        android:textSize="22sp"
        android:text="绑定信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <ImageView
        android:background="@drawable/ic_logo"
        android:id="@+id/heder_pic"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<Spinner-->
            <!--android:id="@+id/tv_choce_school"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:entries="@array/spinner_school"-->

            <!--/>-->
        <ImageView
            android:background="@drawable/ic_use"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <EditText
            android:id="@+id/edt_name"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#666"
            android:textColorHint="#666"
            android:hint="请输入姓名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/ic_stunumber"
            android:layout_width="30dp"
            android:layout_height="35dp" />

        <EditText
            android:id="@+id/edt_no"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#666"
            android:textColorHint="#666"
            android:hint="请输入学号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_finsh"
        android:layout_margin="20dp"
        android:text="完成"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/shape_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_outthis"
        android:text="切换帐号"
        android:textSize="18sp"
        android:gravity="right"
        android:paddingRight="25dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:text="请输入姓名，并输入正确的学号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





</LinearLayout>

